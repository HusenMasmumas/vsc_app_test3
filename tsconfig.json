{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./lib",
      "declaration": true,
      "declarationDir": "./lib",
      "emitDeclarationOnly": true,
      "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*"]
  }
  